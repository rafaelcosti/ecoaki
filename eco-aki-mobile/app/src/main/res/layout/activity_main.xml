<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bege"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/fl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-63dp"
        tools:layout_editor_absoluteY="0dp">

        <fragment
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation" />
        <ImageView
            android:id="@+id/cadeira"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="160dp"
            app:srcCompat="@drawable/ic_cadeira" />
        <ImageView
            android:id="@+id/moletom"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="150dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/ic_moletom" />
        <ImageView
            android:id="@+id/phone"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/ic_phone" />
        <ImageView
            android:id="@+id/camiseta"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:layout_marginRight="90dp"
            app:srcCompat="@drawable/ic_camiseta" />

        <Button
            android:id="@+id/button_cadeira"
            android:layout_width="136dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="60dp"
            android:text="Detalhes"
            android:textColor="@color/green"
            android:textSize="15dp" />
        <Button
            android:id="@+id/button_moletom"
            android:layout_width="136dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="60dp"
            android:text="Detalhes"
            android:textColor="@color/green"
            android:textSize="15dp" />
        <Button
            android:id="@+id/button_phone"
            android:layout_width="136dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="235dp"
            android:text="Detalhes"
            android:textColor="@color/green"
            android:textSize="15dp" />
        <Button
            android:id="@+id/button_camiseta"
            android:layout_width="136dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="90dp"
            android:layout_marginTop="235dp"
            android:text="Detalhes"
            android:textColor="@color/green"
            android:textSize="15dp" />


    </FrameLayout>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>